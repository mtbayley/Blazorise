@typeparam TItem
<Div Class="b-scheduler-row" Flex="Blazorise.Flex.Default.Grow.Is1.Shrink.Is1" Width="Blazorise.Width.Is100" Height="Height.Px( 60 )" Border="Border.Is1.OnBottom.Is1.OnStart">
    <Div Class="b-scheduler-row-cell" Width="Blazorise.Width.Is100" Flex="Flex.Column">
        @for ( int slotIndex = 1; slotIndex <= Slots; ++slotIndex )
        {
            <_SchedulerSlot TItem="TItem" Date="@Date" Hour="@Hour" Time="@GetTime( slotIndex )" Clicked="@OnSlotClick" Last="@(slotIndex == Slots)" />
        }
    </Div>
</Div>